<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.2.xsd
		http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.2.xsd">

    <!-- Определяем папку, в которой будем искать веб компоненты (контроллеры)-->
    <context:component-scan base-package="ru.metal.cashflow.server.controller"/>

    <bean class="org.springframework.beans.factory.config.CustomEditorConfigurer">
        <property name="customEditors">
            <map>
                <entry key="ru.metal.cashflow.server.model.report.ReportType"
                       value="ru.metal.cashflow.server.resolver.ReportTypeConverter"/>
            </map>
        </property>
    </bean>

</beans>